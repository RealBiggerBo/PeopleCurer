<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PeopleCurer.ViewModels"
             x:Class="PeopleCurer.Views.RelaxationProcedureContainerPage"
             x:DataType="{x:Type vm:RelaxationProcedureContainerViewModel}">
    <VerticalStackLayout>
        <Label Text="Entspannungsverfahren"/>

        <Label Text="Alle 3 Übungen helfen dir deine Angst nachhaltig zu reduzieren. Auch hier gilt: Übung macht den Meister"/>

        <CollectionView ItemsSource="{Binding RelaxationProcedures}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type vm:RelaxationProcedureViewModel}">
                    <Button Text="{Binding Title}" Command="{Binding GoToRelaxationProcedurePage}" Margin="5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>